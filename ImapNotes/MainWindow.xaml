<Window x:Class="ImapNotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImapNotes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF191919">
    <Grid Margin="0,0,631,0" Width="220">
        <ListBox x:Name="noteList" Background="#FF232323" BorderThickness="0" ItemsSource="{Binding Messages}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Height="50" Width="200">
                        <TextBlock Text="{Binding Snippet}" Foreground="White"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock x:Name="mainNote" HorizontalAlignment="Left" Margin="210,0,-587,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="582" Height="419"/>
    </Grid>
</Window>
